<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="technovations.ajuj.technovations2017.Register"
    tools:showIn="@layout/activity_main"
    android:scrollbars="vertical"
    android:background="@color/official">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/username_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/status"
            android:hint="What would you like to contribute?"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#f0f8f9"
            android:textColorHint="#f7efef"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/vegetable_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vegetable"
                    android:textColor="#f0f8f9"
                    android:buttonTint="@color/white"
                    android:onClick="selectItem"/>
                <CheckBox
                    android:id="@+id/dairy_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dairy"
                    android:textColor="#f0f8f9"
                    android:buttonTint="@color/white"
                    android:onClick="selectItem"/>
                <CheckBox
                    android:id="@+id/meat_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meat"
                    android:textColor="#f0f8f9"
                    android:buttonTint="@color/white"
                    android:onClick="selectItem"/>
                <CheckBox
                    android:id="@+id/bread_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bread"
                    android:textColor="#f0f8f9"
                    android:buttonTint="@color/white"
                    android:onClick="selectItem"/>
                <CheckBox
                    android:id="@+id/fats_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fats"
                    android:textColor="#f0f8f9"
                    android:buttonTint="@color/white"
                    android:onClick="selectItem"/>
        </LinearLayout>
        <Button android:id="@+id/submit_status"
            android:layout_width="wrap_content"
            android:layout_marginTop="16dp" android:text="Submit"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="0.03" />
    </LinearLayout>
    <ListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@null" />

</LinearLayout>