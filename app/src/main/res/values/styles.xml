<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/AppTheme.MyAppTheme.ActionBar</item>
    </style>

    <style name="AppTheme.MyAppTheme.ActionBar" parent="@android:style/Widget.Holo.ActionBar">

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >

    </style>
    <!-- <item name = "android:background">@color/darkSky</item>-->

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name = "android:background">@color/white</item>
        <item name = "android:textColor">@color/black</item>
    </style>

    <style name="LogFormID">
        <item name="android:textSize">21sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">DEFAULT TEXT</item>

    </style>

    <style name = "homeButton">
        <item name = "android:background">@color/transparent_black</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:paddingLeft">2dp</item>
        <item name = "android:paddingBottom">0dp</item>
        <item name = "android:paddingTop">0dp</item>
        <item name = "android:paddingRight">10dp</item>
        <item name = "android:layout_margin">5dp</item>
    </style>

    <style name = "loginButton">
        <item name = "android:background">@color/transparent_black</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:paddingLeft">2dp</item>
        <item name = "android:paddingBottom">0dp</item>
        <item name = "android:paddingTop">0dp</item>
        <item name = "android:paddingRight">10dp</item>
        <item name = "android:layout_margin">5dp</item>
    </style>

</resources>
